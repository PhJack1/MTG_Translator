{
  "manifest_version": 2,
  "name": "MTG Language Flags Selector",
  "version": "1.0",
  "description": "Select language flags from MTG cards for later translation.",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Select Language Flags"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}