{
  "manifest_version": 2,
  "name": "MTG Cards Translator",
  "version": "1.0",
  "description": "Traduit dans la langue cible les cartes MTG trouv√©es sur MTGTOP8 uniquement pour l'instant",
  "icons": {
    "19": "popup/icons/icon-19.png",
    "38": "popup/icons/icon-38.png",
    "48": "popup/icons/icon-48.png",
    "96": "popup/icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.scryfall.com/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "popup/icons/icon-19.png",
      "38": "popup/icons/icon-38.png"
    },
    "default_title": "MTG Cards Translator",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.mtgtop8.com/*"],
      "js": ["content/content.js"]
    }
  ]
}