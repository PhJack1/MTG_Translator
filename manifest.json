{
  "manifest_version": 2,
  "name": "MTG Cards Translator",
  "version": "1.0",
  "description": "Traduit dans la langue cible les cartes MTG trouv√©es sur MTGTOP8 uniquement pour l'instant",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.scryfall.com/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "popup/icons/icon-19.png",
      "38": "popup/icons/icon-38.png"
    },
    "default_title": "MTG Cards Translator",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.mtgtop8.com/*"],
      "js": ["content/content.js"]
    }
  ]
}